@model EPAM_Project.Models.Register

@{
    ViewData["Title"] = "User's Details";
}

<h1>Details of the Users.</h1>

<div>
    <h4>Register</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Username)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Uid">Edit</a> |
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>

<style>

    body {
        background-color: #3BE6D3;
    }



    /* Style for the details value */
    dd {
        margin-bottom: 10px;
    }


    /* Style for the links */
    a.btn {
        display: inline-block;
        background-color: #4CAF50;
        color: #fff;
        text-align: center;
        padding: 6px 12px;
        margin: 5px;
        border-radius: 5px;
        text-decoration: none;
    }

    /* Style for the "Back to List" button */
    a.btn-secondary {
        background-color: #FF8513;
    }

        a.btn-secondary:hover {
            background-color: #2196F3;
        color: #000000;
    }

    /* Style for the horizontal rule */
    hr {
        border: none;
        border-top: 1px solid #FF0000;
        margin-top: 30px;
        margin-bottom: 30px;
    }
</style>
