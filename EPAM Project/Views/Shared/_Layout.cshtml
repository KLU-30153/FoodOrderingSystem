<!DOCTYPE html>
<html lang="en">
<ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="5.0.10" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Razor.RuntimeCompilation" Version="5.0.10" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.ViewFeatures" Version="5.0.10" />
</ItemGroup>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EPAM_Project.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><font size="+3">𝐇𝐄𝐕𝐎 𝐅𝐎𝐎𝐃𝐒</font></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="registers" asp-action="Create"><b>𝐒𝐢𝐠𝐧𝐔𝐩</b></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Login"><b>𝐒𝐢𝐠𝐧𝐈𝐧</b></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><b>𝐕𝐢𝐞𝐰 𝐑𝐞𝐬𝐭𝐚𝐮𝐫𝐞𝐧𝐭𝐬</b></a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Payment"><b>𝐏𝐚𝐲𝐦𝐞𝐧𝐭</b></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="AdminLogin"><b>𝐀𝐝𝐦𝐢𝐧 𝐋𝐨𝐠𝐢𝐧</b></a>
                        </li>
                      
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - EPAM_Project - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
    /* Style for navigation bar */
    .navbar {
        background-color: #47EA7B;
        border-bottom: 1px solid #dee2e6;
        box-shadow: 0 4px 2px -2px #3BE6D3;
        padding: 0.5rem 1rem;
    }

    .navbar-brand {
        font-size: 1.5rem;
        font-weight: bold;
        color: #47EA7B;
    }

    .nav-link {
        color: #f8f9fa;
        font-size: 1rem;
        font-weight: bold;
        text-transform: uppercase;
        margin-right: 1rem;
    }

        .nav-link:hover {
            color: #007bff;
        }

    /* Style for main content area */
    .container {
        margin-top: 2rem;
    }

    /* Style for footer */
    .footer {
        background-color: #81F797;
        border-top: 1px solid #000000;
        border-bottom: 1px solid #000000;
        padding: 0.5rem 1rem;
        margin-top: 2rem;
        font-size: 0.8rem;
        color: #000000;
    }

        .footer a {
            color: #000000;
        }

            .footer a:hover {
                color: #007bff;
            }

    .nav-link:hover {
        color: #fff;
        background-color: #FFA500;
    }


</style>